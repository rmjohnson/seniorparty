<div id="notice">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>
<h1>Submit a New Quote!</h1>

<% form_for(@quote) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :student_id %> ID<br />
    <%= f.text_field :student_id %>
  </p>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<h5><%= link_to 'View more quotes', {:controller => "list"} %></h5>
